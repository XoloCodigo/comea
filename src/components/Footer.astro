---
// Importamos toda la info del sitio para llenar el footer dinámicamente
import { NAV_LINKS, SOCIALS, SITE_INFO } from "../consts";
import { Icon } from "astro-icon/components";
---

<footer class="bg-comea-main dark:bg-black text-white pt-10 pb-6 mt-auto">
  <div
    class="max-w-7xl mx-auto px-6 grid grid-cols-2 md:grid-cols-4 gap-8 mb-8"
  >
    <div class="col-span-2 md:col-span-1">
      <div class="flex items-center mb-3">
        <div
          class="w-7 h-7 bg-white text-comea-main flex items-center justify-center rounded-full mr-2"
        >
          <Icon name="fa6-solid:plane-up" class="text-xs" />
        </div>
        <span class="font-bold text-lg">{SITE_INFO.shortName}</span>
      </div>
      <p class="text-blue-200 text-xs leading-relaxed max-w-xs">
        {SITE_INFO.description}
      </p>
    </div>

    <div class="col-span-1">
      <h4 class="font-bold mb-3 text-comea-accent text-sm">Navegación</h4>
      <ul class="space-y-1.5 text-xs text-blue-100">
        <!-- Mostramos solo los primeros 4 enlaces del menú principal -->
        {
          NAV_LINKS.slice(0, 4).map((link) => (
            <li>
              <a href={link.href} class="hover:text-white transition">
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="col-span-1">
      <h4 class="font-bold mb-3 text-comea-accent text-sm">Legal</h4>
      <ul class="space-y-1.5 text-xs text-blue-100">
        <li>
          <a href="#" class="hover:text-white transition">Aviso de Privacidad</a
          >
        </li>
        <li><a href="#" class="hover:text-white transition">Estatutos</a></li>
        <li>
          <a href="#" class="hover:text-white transition">Transparencia</a>
        </li>
      </ul>
    </div>
    <div class="col-span-2 md:col-span-1">
      <h4 class="font-bold mb-3 text-comea-accent text-sm">Síguenos</h4>
      <div class="flex space-x-3">
        <!-- Generamos los íconos de redes sociales -->
        {
          SOCIALS.map((social) => (
            <a
              href={social.href}
              class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center hover:bg-white/20 transition"
              aria-label={social.name}
            >
              <Icon name={social.icon} class="text-sm" />
            </a>
          ))
        }
      </div>
    </div>
  </div>
  <div
    class="max-w-7xl mx-auto px-6 border-t border-white/10 pt-6 text-center text-[10px] text-blue-300"
  >
    &copy; {new Date().getFullYear()}
    {SITE_INFO.title}. Todos los derechos reservados.
  </div>
</footer>
